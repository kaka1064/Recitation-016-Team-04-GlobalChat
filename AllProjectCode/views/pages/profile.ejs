<%- include ('../partials/header') %> <%- include ('../partials/menu') %>

<main>
  <div class="container" style="padding-top: 30px">
    <table class="table" style="border-style: groove;">
      <thead>
        <tr>
          <th>Author</th>
          <th>Post</th>
          <th>Topic</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% news.forEach(item => { %>
          <tr>
            <td><%= item.username %></td>
            <td><%= item.post %></td>
            <td><%= item.topic %></td>
            <td hidden><%= item.news_id%></td> 
            <td>
              <div class = "col">
                <input type="image" src="/resources/editButton.png" data-bs-toggle="modal" data-bs-target="#exampleModal1" style="width: 50px; height: 50px; cursor: pointer;"> 

                <div class="modal fade" id="exampleModal1" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                  <div class="modal-dialog" role="document">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Edit Post</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                      </div>
                      <div class="modal-body">
                        <form action = "/edit" method = "POST">
                          <input type="text" name="news_id" id="news_id" value="<%=item.news_id%>" hidden>
                          <div class="mb-3">
                            <label for="username1" class="form-label">Username:</label>
                            <input type="text" class="form-control" id="username" name ="username"  value = "<%=username%>" readonly>
                          </div>
                          <div class="mb-3">
                            <label for="post" class="form-label">Post: </label>
                            <textarea id="post" name=post class="form-control" cols="30" rows="10"><%=item.post%></textarea>
                            <!-- <input type="text" class="form-control" id="post" name = "post" style="height: 300px; text-align:justify"required> -->
                          </div>
                          <div class="mb-3">
                            <label for="language1" class="form-label">Language</label>
                            <select id="language" name="language" required>
                              <option value="EN">English</option>
                              <option value="JA">Japanese</option>
                              <option value="ES">Spanish</option>
                              <option value="FR">French</option>
                              <option value="DE">German</option>
                            </select>
                          </div>
                          <div class="mb-3">
                            <label for="topic1" class="form-label">Topic: </label>
                            <select id="topic" name="topic" required>
                              <option value="politics">Politics</option>
                              <option value="environment">Environment</option>
                              <option value="war">War</option>
                              <option value="sports">Sports</option>
                              <option value="technology">Technology</option>
                            </select>
                          </div>
                          <button type="submit" class="btn btn-primary">Update</button>
                        </form>
                      </div>
                      <div class="modal-footer">
                        <!-- <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button> -->
                      </div>
              </div>
            </td>
          </tr>
        <% }) %>
      </tbody>
    </table>  
  </div>
</main>

<%- include ('../partials/footer') %>